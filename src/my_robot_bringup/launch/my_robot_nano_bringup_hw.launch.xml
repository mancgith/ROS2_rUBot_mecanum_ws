<?xml version="1.0"?>
<launch>
    <arg name="mecanum_serial_port" default="/dev/ttyACM0" description="Port sèrie per a la placa dels motors"/>

    <arg name="rplidar_serial_port" default="/dev/ttyUSB0" description="Port sèrie per al RPLiDAR"/>
    <arg name="rplidar_frame_id" default="base_link" description="Frame ID per a les dades del LiDAR"/>
    
    <arg name="camera_width" default="160" description="Amplada de la imatge de la càmera"/>
    <arg name="camera_height" default="120" description="Alçada de la imatge de la càmera"/>

    <include file="$(find-pkg-share my_robot_driver)/launch/rubot_nano_driver_mecanum.launch.xml">
        <arg name="serial_port" value="$(arg mecanum_serial_port)"/>
    </include>
    
    <include file="$(find-pkg-share rplidar_ros)/launch/rplidar_a1_launch.py">
        <arg name="serial_port" value="$(arg rplidar_serial_port)"/>
        <arg name="frame_id" value="$(arg rplidar_frame_id)"/>
    </include>

    <include file="$(find-pkg-share my_robot_bringup)/launch/usb_cam_custom.launch.py">
        <arg name="image_width" value="$(arg camera_width)"/>
        <arg name="image_height" value="$(arg camera_height)"/>
    </include>

</launch>